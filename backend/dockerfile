FROM python:3.11.9

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive
    
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libopenblas-dev \
    libomp-dev \
    libjpeg-dev \
    libpng-dev \
    libpq-dev \
    libgl1 \
    libglib2.0-0 \
    curl \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install torch CPU wheels first (via PyTorch CPU index)
RUN pip install --no-cache-dir --index-url https://download.pytorch.org/whl/cpu torch torchvision torchaudio

# Install remaining dependencies
RUN python3 -m pip install --no-cache-dir --prefer-binary -r requirements.txt

# Copy application code
COPY . .

EXPOSE 5050
CMD ["python", "run.py"]
